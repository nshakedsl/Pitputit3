<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:layout_marginTop="8dp"
    android:padding="4.00dp"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageUser"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/ContentTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_oval="true"
        android:background="@drawable/image_profile"

        />




    <TextView
        android:id="@+id/ContentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4sp"
        android:layout_marginLeft="4sp"
        android:background="@drawable/bubbleother"
        android:paddingStart="4.00dp"
        android:paddingTop="8.00dp"
        android:paddingEnd="12.00dp"
        android:paddingBottom="8dp"
        app:layout_constraintWidth_max="wrap"
        android:textColor="@color/message_text"
        android:textSize="13.00sp"
        app:layout_constraintStart_toEndOf="@id/imageUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/DateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.00dp"
        android:textColor="@color/message_text_date"
        android:textSize="10.00sp"
        app:layout_constraintStart_toStartOf="@id/ContentTextView"
        app:layout_constraintTop_toBottomOf="@id/ContentTextView"
        />








</androidx.constraintlayout.widget.ConstraintLayout>