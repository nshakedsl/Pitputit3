<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="4.00dp"
    >

    <TextView
        android:id="@+id/DisplayNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bubbleme"
        android:paddingStart="12.00dp"
        android:paddingTop="8.00dp"
        android:paddingEnd="12.00dp"
        android:paddingBottom="8dp"
        app:layout_constraintWidth_max="wrap"
        android:textColor="@color/white"
        android:textSize="13.00sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.8"
    />

    <TextView
        android:id="@+id/DateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.00dp"
        android:textColor="@color/white"
        android:textSize="10.00sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DisplayNameTextView"
        />




</androidx.constraintlayout.widget.ConstraintLayout>